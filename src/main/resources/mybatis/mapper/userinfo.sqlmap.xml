    <select id="selectById" resultMap="user_column_map">
        SELECT
        <include refid="all_column"/>
        FROM p_user_info
        WHERE user_id = #{userId} AND del_flag = 0
    </select>

    <select id="selectByIdForOpt" resultMap="user_column_map">
        SELECT
        u.user_id,
        u.username,
        u.nickname,
        u.user_code,
        u.mobile_phone,
        u.role,
        u.permission,
        u.description,
        u.enable_flag,
        u.created_time,
        a.password
        FROM p_user_info u
        LEFT JOIN p_user_auth a ON u.user_id = a.user_id <!--    用于编辑用户密码    -->
        WHERE u.user_id = #{userId} AND u.del_flag = 0
    </select>

    <select id="selectByCode" resultMap="user_column_map">
        SELECT
        <include refid="all_column"/>
        FROM p_user_info
        WHERE user_code = #{user_code}
    </select>

    <delete id="delete">
        DELETE FROM p_user_info where user_id = #{userId}
    </delete>
</mapper>
